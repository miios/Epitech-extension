{
  "manifest_version": 2,

  "name": "Epitech Notifier",
  "description": "Une extension non officielle qui vous permet de voir vos notifications sans se rendre sur l'intranet epitech. Dites au revoir au 502 bad gateaway ! Par Nathan Anné",
  "version" :"2.0",

  "browser_action": {
    "default_icon": "epitech-logo.png",
    "default_popup": "index.html",
    "default_title": "Vérifier vos notifications"
  },
  "icons": {
    "16": "epitech-logo.png",
    "48": "epitech-logo.png",
    "128": "epitech-logo.png"
  },

  "content_security_policy": "script-src 'self' 'sha256-JaJo+GWtiKB7YdhRMBY3713jCaKGVJi5HB7Uf9KXoKY='; object-src 'self'",
  "permissions": [
    "https://intra.epitech.eu/user/notification/message?format=json",
    "activeTab"
  ]
}